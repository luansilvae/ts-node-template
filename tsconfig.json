{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",                                  
    "typeRoots": ["./src/@types", "node_modules/@types"],
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noImplicitAny": true,
    "skipLibCheck": true
  }
}








